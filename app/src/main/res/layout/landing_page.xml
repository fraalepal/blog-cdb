<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#131A22"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="36dp">


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/bienvenidoLogo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bienvenido/a de nuevo"
                        android:textColor="#FFFFFF"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/landingName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="John Doe"
                        android:textColor="#B6B6B6"
                        android:fontFamily="@font/montserratregular"
                        android:textSize="26dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/javaCardView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="#FBA002"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:background="@color/whiteTransperenthalf"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="24dp"
                                android:layout_marginTop="24dp"
                                app:cardCornerRadius="15dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="12dp"
                                    android:background="@drawable/rightup"
                                    android:orientation="horizontal"></LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/montserratsemibold"
                                android:textColor="#ffffff"
                                android:textSize="16dp"
                                android:text="Java" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="bottom|center"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/java"></LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/pythonCardView"
                        android:layout_width="match_parent"
                        android:layout_marginTop="24dp"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="#00897B"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:background="@color/whiteTransperenthalf"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="24dp"
                                android:layout_marginTop="24dp"
                                app:cardCornerRadius="15dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="12dp"
                                    android:background="@drawable/rightup"
                                    android:orientation="horizontal"></LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/textpython"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/montserratsemibold"
                                android:textColor="#ffffff"
                                android:textSize="16dp"
                                android:text="Python" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="bottom|center"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/python"></LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_marginTop="24dp"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="#292928"
                        app:cardCornerRadius="12dp">

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="@drawable/javascript"></LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_marginTop="24dp"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="#1E88E5"
                        app:cardCornerRadius="12dp">

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="@drawable/typescript"></LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_marginTop="24dp"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="#FDD835"
                        app:cardCornerRadius="12dp">

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="@drawable/go"></LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </ScrollView>


        </LinearLayout>
    </ScrollView>

</LinearLayout>